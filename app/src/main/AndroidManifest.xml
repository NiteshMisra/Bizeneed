<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="in.bizeneed">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme2">
        <activity android:name=".activity.Registration"
            android:windowSoftInputMode="stateHidden|adjustResize"/>
        <activity
            android:name=".activity.Login"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".activity.MainActivity"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity android:name=".activity.BookingDetail" />
        <activity
            android:name=".activity.Address"
            android:windowSoftInputMode="adjustResize|stateHidden" />
        <activity
            android:name=".activity.Summary"
            android:label="Booking Summary"
            android:theme="@style/AppTheme" />
        <activity android:name=".activity.DetailActivity" />
        <activity android:name=".activity.SearchActivity" />
        <activity android:name=".activity.ListingActivity" />
        <activity android:name=".activity.ServiceDetail" />
        <activity android:name=".activity.ServiceCategory" />
        <activity android:name=".activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>
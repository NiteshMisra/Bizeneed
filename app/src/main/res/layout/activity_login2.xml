<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFFFFF"
        tools:context=".activity.LoginActivity2">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="20dp"
            android:padding="15dp"
            android:src="@drawable/login"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Single Platform for all your Business Needs"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Started"
            android:textSize="13sp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/poppins"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/edt_bg"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/code"
                android:layout_width="wrap_content"
                android:text="+91"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_medium"
                android:textSize="15sp"
                android:padding="14dp"
                android:layout_height="wrap_content"/>

            <View
                android:id="@+id/v1"
                android:layout_width="2dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/code"
                android:background="#F0F0F0"/>

            <EditText
                android:id="@+id/mobileNoEdt"
                android:layout_toStartOf="@id/check"
                android:layout_toEndOf="@id/v1"
                android:layout_width="match_parent"
                android:inputType="phone"
                android:textColor="@color/black"
                android:maxLength="10"
                android:textSize="15sp"
                android:fontFamily="@font/roboto_medium"
                android:background="@null"
                android:hint="Enter your Phone Number"
                android:padding="14dp"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/check"
                android:layout_width="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_baseline_check_24"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/continueBtn"
            android:layout_width="130dp"
            android:text="Continue"
            android:layout_gravity="center_horizontal"
            android:padding="11dp"
            android:layout_marginStart="20dp"
            android:textSize="15sp"
            android:fontFamily="@font/roboto_black"
            android:textColor="@color/white"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:cardCornerRadius="17.5dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/image_preview_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:scaleType="fitXY" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:background="@drawable/feed_comment_bg"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/sender_name_tv"
                        android:layout_width="match_parent"
                        android:text="Nitish Mishra"
                        android:fontFamily="@font/roboto_bold"
                        android:textSize="15sp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:paddingEnd="25dp"
                        android:layout_toStartOf="@id/points"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:textColor="#000000"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/points"
                        android:layout_width="wrap_content"
                        android:text="5.0"
                        android:drawableStart="@drawable/ic_star"
                        android:fontFamily="@font/roboto_bold"
                        android:layout_centerVertical="true"
                        android:textSize="12sp"
                        android:layout_alignParentEnd="true"
                        android:textColor="@color/colorPrimary"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

                <TextView
                    android:id="@+id/comment_tv"
                    android:layout_width="match_parent"
                    android:text="Nitish Mishra"
                    android:fontFamily="@font/roboto"
                    android:textSize="12sp"
                    android:textColor="#696969"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/time_tv"
                    android:layout_width="wrap_content"
                    android:text="23 minutes ago"
                    android:fontFamily="@font/roboto"
                    android:textSize="10sp"
                    android:textColor="#9C9C9C"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/like_tv"
                    android:layout_width="wrap_content"
                    android:text="Like"
                    android:layout_marginStart="15dp"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/ic_dot_2"
                    android:fontFamily="@font/roboto"
                    android:textSize="10sp"
                    android:textColor="#9C9C9C"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</layout>